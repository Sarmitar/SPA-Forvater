@model SPAForvater.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Подключение всего, что используется -->
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/CSS/form.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src='~/js/main.js'></script>
</head>
<body>
    @using (Html.BeginForm())
    {
    <form class="card p-2">
        <!--Background формы-->
        <div class="transparent-background">
            <!--Контейнер формы-->
            <div class="container">
                <!--Затемнение окантовки-->
                <div class="card border-0 shadow my-5">
                    <!-- Заполнение формы-->
                    <div class="card-body form-container p-5">
                        <h1 class="font-weight-light">Для того, чтобы мы вам перезвонили, заполните форму</h1>
                        <p class="lead">Поля, отмеченные звездочкой, являются обязательными:</p>
                        <!--Отображения сообщений об ошибках при валидации модели-->
                        <!--А так же боксы для ввода-->
                        @Html.ValidationSummary()
                        <p>*Ваше имя: @Html.TextBoxFor(x => x.Name, new { @class = "form-control mb-3 col" })</p>
                        <p>*Ваш email: @Html.TextBoxFor(x => x.Email, new { @class = "form-control mb-3 col" })</p>
                        <p>*Ваш телефон: @Html.TextBoxFor(x => x.Phone, new { @class = "form-control mb-3 col" })</p>
                        <p>Ваш комментарий: @Html.TextAreaFor(x => x.Comment, new { @class = "form-control mb-3 col" })</p>
                        <p>
                            В какое время суток звонок будет для вас удобен?
                            @Html.DropDownListFor(x => x.TimeOfDay, new[]{
                            new SelectListItem() { Text = "Удобнее утром", Value =  Boolean.TrueString},
                            new SelectListItem() { Text = "Удобнее вечером", Value =  Boolean.FalseString } }
                            , new { @class = "custom-select" })
                        </p>
                        <!--Кнопка перехода на представление Thanks-->
                        <div button>
                            <input type="submit" class="btn btn-block my-button">
                        </div>
                    </div>
                </div>
                <!--Redirect на представление index-->
                <p class="text-secondary font-weight-light text-center fa-lg p-2 m-2 li-ic">© ЗАО «Конструкторское бюро «ФАРВАТЕР»</p>
            </div>
        </div>
    </form>
    }
</body>
</html>



